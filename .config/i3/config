# Brightness Control
bindsym XF86MonBrightnessUp	exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown	exec xbacklight -dec 10 # decrease screen brightness

# Volume Control
bindsym XF86AudioMute        	exec pamixer -t # mute audio
bindsym XF86AudioRaiseVolume 	exec pamixer -i 5 # increase volume
bindsym XF86AudioLowerVolume 	exec pamixer -d 5 # decrease volume
